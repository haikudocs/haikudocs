  background-color: yellow;
  border-radius: 8px;
  width: 300px;
}

.flex {
  display: flex;
  flex-direction: row;
  background-color: lightblue;
  padding: 8px;
  border-radius: 8px;
}

.flex &amp;gt; * {
  border: 1px solid black;
  border-radius: 8px;
  margin-right: 8px;
  padding: 8px;
}

